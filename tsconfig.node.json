{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@shared/*": ["src/shared/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "include": ["vite.config.ts"]
}
